<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <!-- ImageButton positioned at top left corner -->
    <ImageButton
        android:id="@+id/backButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/baseline_arrow_back_24"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"/>

    <!-- Rest of your views centered vertically -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="16dp"
        android:layout_centerVertical="true">

        <ImageView
            android:id="@+id/icon_no_recipes"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/ic_no_recipes" />

        <TextView
            android:id="@+id/text_no_recipes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No recipes found in the database"
            android:textSize="18sp"
            android:textColor="@android:color/holo_red_dark"
            android:layout_marginTop="16dp" />
    </LinearLayout>
</RelativeLayout>
